<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
            <solid android:color="@color/c15"/>
            <stroke android:width="1dp" android:color="@color/c15"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
            <solid android:color="@color/c10"/>
            <stroke android:width="1dp" android:color="@color/c10"/>
        </shape>
    </item>

</selector>