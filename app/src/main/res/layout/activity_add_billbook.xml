<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bill.billbook.AddBillBookActivity"
    android:orientation="vertical"
    android:background="@color/sfs_page_bg_color"
    >
    <com.bill.google.banner.GBannerBView
        android:id="@+id/gBannerBView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sfs_page_bg_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/c8"
            >
            <com.common.base.CustomFontTextView
                android:id="@+id/returnBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawableLeft="@drawable/sfs_back_sel"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />

            <com.common.base.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新建账簿"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </RelativeLayout>

        <com.common.base.CustomFontEditText
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="15dp"
            android:textColor="@color/c8"
            android:textSize="@dimen/s4"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:hint="输入名称"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="12"
            />

        <com.common.base.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <com.common.base.CustomFontTextView
            android:id="@+id/createBillBookTextView"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/gray_disabled_retangle_selector"
            android:textSize="@dimen/s6"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="创建"
            android:onClick="onBtnClick"
            android:clickable="true"
            />

    </LinearLayout>




</RelativeLayout>
