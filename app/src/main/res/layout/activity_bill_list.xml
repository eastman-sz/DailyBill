<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bill.bill.BillListActivity"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_bg"
    >
    <com.common.base.CommonTitleView
        android:id="@+id/commonTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        >
        <com.handmark.pulltorefresh.library.PullToRefreshStickyListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sticky_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scrollbars="none"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:fadingEdge="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrHeaderTextColor="@color/c12"
            ptr:ptrMode="disabled"
            ptr:ptrloading_layout_bg_color="@color/transparent"
            />
    </LinearLayout>

    <com.common.base.CustomFontTextView
        android:id="@+id/addBillBtnTextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/c1_c2_retangle_selector"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/s6"
        android:text="记一笔"
        android:onClick="onBtnClick"
        android:clickable="true"
        />
</LinearLayout>
