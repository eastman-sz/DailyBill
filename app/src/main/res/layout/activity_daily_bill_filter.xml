<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bill.daylist.DailyBillFilterActivity"
    android:orientation="vertical"
    android:background="@color/sfs_page_bg_color"
    >
    <com.common.base.CommonTitleView
        android:id="@+id/commonTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <com.bill.daylist.CommonDateFilterView
            android:id="@+id/commonDateFilterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            />

        <ImageView style="@style/full_line_style" />

        <com.bill.daylist.filter.ExpanseAndIncomeFilterView
            android:id="@+id/expanseAndIncomeFilterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

        <ImageView style="@style/full_line_style" />

        <com.bill.daylist.filter.BillBookFilterView
            android:id="@+id/billBookFilterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:id="@+id/typeFilterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            >
            <ImageView style="@style/full_line_style" />

            <com.bill.daylist.filter.TypeFilterView
                android:id="@+id/typeFilterView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/extraExpanseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            >
            <ImageView style="@style/full_line_style" />

            <com.bill.daylist.filter.NatureFilterView
                android:id="@+id/natureFilterView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView style="@style/full_line_style" />

            <com.bill.daylist.filter.PaymentFilterView
                android:id="@+id/paymentFilterView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView style="@style/full_line_style" />

            <com.bill.daylist.filter.MarketFilterView
                android:id="@+id/marketFilterView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>



    <com.common.base.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        />

    <com.bill.google.banner.GBannerBView
        android:id="@+id/gBannerBView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >
        <com.common.base.CustomFontTextView
            android:id="@+id/resetBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_bg_a"
            android:textSize="@dimen/s4"
            android:textColor="@color/c8"
            android:text="重置"
            />

        <com.common.base.CustomFontTextView
            android:id="@+id/sureBtnTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/c1_c2_retangle_selector"
            android:textSize="@dimen/s4"
            android:textColor="@color/white"
            android:text="确定"
            />

    </LinearLayout>




</LinearLayout>
