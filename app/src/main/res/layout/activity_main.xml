<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bill.main.MainActivity"
    android:orientation="vertical"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView style="@style/full_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >
        <com.common.base.CustomFontTextView
            android:id="@+id/item1TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/s4"
            android:textColor="@color/c8"
            android:gravity="center"
            android:text="A"
            />

        <com.common.base.CustomFontTextView
            android:layout_width="@dimen/basic_line_height"
            android:layout_height="match_parent"
            android:background="@color/sfs_c9"
            />

        <com.common.base.CustomFontTextView
            android:id="@+id/item2TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/s4"
            android:textColor="@color/c8"
            android:gravity="center"
            android:text="B"
            />
    </LinearLayout>

</LinearLayout>
