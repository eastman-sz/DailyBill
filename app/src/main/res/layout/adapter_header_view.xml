<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bill.bill.BillListActivity"
    android:orientation="horizontal"
    android:background="@color/c15"
    >
    <com.common.base.CustomFontTextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="@dimen/s2"
        android:textColor="@color/c13"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/transparent"
        />

    <com.common.base.CustomFontDigitTextView
        android:id="@+id/monthAmountTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:textSize="@dimen/s3"
        android:textColor="@color/c1"
        android:gravity="center_vertical|right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/transparent"
        />
</LinearLayout>
