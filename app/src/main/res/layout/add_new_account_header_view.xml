<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bill.billbook.AddBillBookActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >
        <com.common.base.CustomFontTextView
            android:id="@+id/item0TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c8"
            android:textSize="16sp"
            android:text="支出"
            />

        <ImageView
            style="@style/full_line_style"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <com.common.base.CustomFontTextView
            android:id="@+id/item1TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c14"
            android:textSize="16sp"
            android:text="收入"
            />
    </LinearLayout>

    <ImageView style="@style/full_line_style" />

</LinearLayout>
