<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <com.common.base.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:textColor="@color/c13"
        android:text="分类"
        />

    <ImageView style="@style/full_line_style"/>

    <com.bill.wheelview.TypeSelectWheelView
        android:id="@+id/typeSelectWheelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView style="@style/full_line_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_bg_a"
        >
        <com.common.base.CustomFontTextView
            android:id="@+id/editTypeTextView"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/c12"
            android:text="编辑分类"
            />

        <ImageView style="@style/full_line_style"
            android:layout_width="@dimen/basic_line_height"
            android:layout_height="match_parent" />

        <com.common.base.CustomFontTextView
            android:id="@+id/sureBtnTextView"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/c12"
            android:text="确定"
            />
    </LinearLayout>

</LinearLayout>
